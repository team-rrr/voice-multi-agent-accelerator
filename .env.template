# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git - it contains sensitive credentials

# Azure Speech Service
AZURE_SPEECH_KEY=your_speech_key_here
AZURE_SPEECH_REGION=your_region_here

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_openai_key_here
AZURE_OPENAI_MODEL_NAME=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2024-07-18

# Voice Live API
AZURE_VOICE_LIVE_API_KEY=your_voice_live_key_here
AZURE_VOICE_LIVE_ENDPOINT=https://your_region.api.cognitive.microsoft.com
VOICE_LIVE_MODEL=gpt-4o-mini
ACS_CONNECTION_STRING=your_acs_connection_string_here

# Optional: Azure User Assigned Identity (for production deployment)
AZURE_USER_ASSIGNED_IDENTITY_CLIENT_ID=your_client_id_here